<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.namikaze.blooddonate.DetailsActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:title="Add Details"
        app:titleTextColor="@color/white">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/set_image_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Click here to choose an image"
        android:textSize="15sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/set_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:background="@drawable/user_image_trasparent"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_layout"
        android:hint="@string/first_name_hints"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_layout"
        android:hint="@string/address_hint"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:imeOptions="actionNext"
        android:background="@drawable/edit_text_layout"
        android:hint="@string/phone_hints"
        android:inputType="number"
        android:singleLine="true"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_male"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130sp"
                android:text="Male"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/redio_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Female"
                android:textSize="15sp" />

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">


        <TextView
            android:id="@+id/show_dob"
            android:imeOptions="actionNext"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_layout"
            android:ems="21"
            android:gravity="center"
            android:hint="date of birth"
            android:textSize="17sp" />

    </RelativeLayout>
    <Spinner
        android:id="@+id/blood_spinner"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/edit_text_layout">
    </Spinner>

    <CheckBox
        android:layout_marginTop="35dp"
        android:id="@+id/check_to_conditon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="I have read and agree the terms and condition" />


    <Button
        android:id="@+id/btn_continue"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/continue_button"
        android:text="Continue" />

</LinearLayout>
