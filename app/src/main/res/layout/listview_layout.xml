<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="125dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/list_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/user_image"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="8dp"
            android:ems="8"
            android:text="Saleh Ahmed Sifat"
            android:textSize="19sp" />


        <TextView
            android:id="@+id/list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/list_name"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:text="Tejgaoun,dhaka"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/list_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/list_name"
            android:layout_marginTop="50dp"
            android:ems="8"
            android:text="+880123456789"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/list_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/list_name"
            android:layout_marginTop="69dp"
            android:ems="8"
            android:text="Sex: Male"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/list_blood_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/list_name"
            android:layout_marginTop="88dp"
            android:ems="8"
            android:text="Gruop: A+"
            android:textSize="15sp" />

        <Button
            android:id="@+id/list_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/list_name"
            android:layout_marginEnd="11dp"
            android:background="@drawable/call_button"
            android:text="call"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>